{% block content %}

<div class="article-container">
    <div class="article-full">
        <div class="article-title">
            <h2 class="article-categorie"> {{ article.categorie }} </h2>
            <h1 class="article-title">{{ article.titre }}</h1>
            <img class="article-image" src="{{ asset('build/images/' ~ article.imgbg) }}" alt="">

            {% if  article.preview  %}
                <div class="article-preview"> {{ article.preview }} </div>
            {% endif %}
        </div>


        <div id="fullarticle" class="article-content">
             {{ articlefull | raw }}
        </div>


    </div>



</div>


    <div class="article-bottom">

        <a class="btn btn-primary" href="{{ path('main') }}">Retour à l'acceuil</a>
        {#  <a class="btn btn-primary" href="{{ path(route) }}"> Retour à {{ article.categorie }}</a> #}
